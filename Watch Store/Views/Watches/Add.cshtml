

@model Watch_Store.Models.WatchViewModel

<h1>Add Watch</h1>
<form method="post" asp-controller="Watches" asp-action="Add">
<div class="mt-3">
        <label class="form-label">Brand Name</label>
  <input type="text"  class="form-control" asp-for="BrandName" />
</div>

<div class="mt-3">
        <label class="form-label">Watch Model</label>
    <input type="text" class="form-control" asp-for="WatchModel" />
</div>

<div class="mt-3">
        <label class="form-label">Reference Number</label>
    <input type="text" class="form-control" asp-for="ReferenceNumber" />
</div>

    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>

    <div class="mt-3">
        <label class="form-label">Image</label>
        <input type="text" class="form-control" asp-for="imgUrl" />
    </div>

<div class="m-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>